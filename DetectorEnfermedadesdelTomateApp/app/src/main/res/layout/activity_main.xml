<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:background="@color/COLOR_PRINCIPAL_SOMBRA_SECUNDARIO"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_layout"
            android:background="@color/FONDO_PRINCIPAL">

            <Button
                android:id="@+id/ma_AnalisisServidor"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/ma_Galeria"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:background="@drawable/custom_button"
                android:text="Analisis en servidor"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.008"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.812" />

            <Button
                android:id="@+id/ma_BTNmostrarDescripcion"
                android:layout_width="120dp"
                android:layout_height="79dp"
                android:layout_marginBottom="10dp"
                android:layout_above="@id/ma_Galeria"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|center"
                android:background="@drawable/minf_descripcion"
                android:backgroundTint="@color/COLOR_PRINCIPAL_SOMBRA_PRINCIPAL"
                android:shadowColor="#000000"
                android:shadowRadius="25"
                android:textAllCaps="false"
                android:textColor="@color/TEXTO_PRINCIPAL_INVERSO"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.974" />

            <Button
                android:id="@+id/ma_Foto"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|left"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/minf_camara"
                android:backgroundTint="@color/COLOR_PRINCIPAL_SOMBRA_PRINCIPAL"
                android:shadowColor="#000000"
                android:shadowRadius="25"
                android:textAllCaps="false"
                android:textColor="@color/TEXTO_PRINCIPAL_INVERSO"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.973" />

            <Button
                android:id="@+id/ma_Galeria"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|right"
                android:background="@drawable/minf_galeria"
                android:backgroundTint="@color/COLOR_PRINCIPAL_SOMBRA_PRINCIPAL"
                android:shadowColor="#000000"
                android:shadowRadius="25"
                android:textAllCaps="false"
                android:textColor="@color/TEXTO_SECUNDARIO"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.973" />

            <ImageView
                android:id="@+id/ma_Imagen"
                android:layout_width="320dp"
                android:layout_height="260dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/FONDO_SECUNDARIO"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3"
                android:layout_gravity="top|center"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/classified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ma_Imagen"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="ClasificaciÃ³n:"
                android:textColor="@color/TEXTO_PRINCIPAL"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ma_Imagen"
                app:layout_constraintVertical_bias="0.0"

                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textoBotonesCapturarFoto"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ma_Imagen"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|left"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="80dp"
                android:text="Capturar\n     foto"
                android:textColor="@color/TEXTO_PRINCIPAL"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ma_Imagen"

                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textoBotonesDescripcionEnfermedad"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ma_Imagen"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="80dp"
                android:text="Descripcion\nenfermedad"
                android:textColor="@color/TEXTO_PRINCIPAL"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ma_Imagen"

                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textoBotonesGaleria"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ma_Imagen"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|right"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="80dp"
                android:text="Galeria"
                android:textColor="@color/TEXTO_PRINCIPAL"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ma_Imagen"

                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/ma_resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classified"
                android:layout_centerHorizontal="true"
                android:text="."
                android:textColor="@color/TEXTO_SECUNDARIO"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classified"
                app:layout_constraintVertical_bias="0.0"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                />

            <TextView
                android:id="@+id/textViewUsuario"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginLeft="115dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="Root"
                android:textAlignment="textEnd"
                android:textColor="@color/TEXTO_SECUNDARIO"
                android:textSize="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.113"

                />

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/COLOR_PRINCIPAL_BASE"
        app:itemTextColor="@color/TEXTO_SECUNDARIO"/>



</androidx.drawerlayout.widget.DrawerLayout>